{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "preserve",
        "skipLibCheck": true,
        "outDir": "dist",

        /* Bundler mode */
        "jsx": "react-jsx",
        "resolveJsonModule": true,

        /* Linting */
        "strict": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": ["./frontend"]
}
